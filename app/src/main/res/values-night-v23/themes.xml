<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SplitWise" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4fc3f7</item>
        <item name="colorPrimaryVariant">#4fc3f7</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->

        <item name="colorSecondary">#29b6f6</item>
        <item name="colorSecondaryVariant">#0093c4</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>-->
<!--        <item name="android:windowLightStatusBar">true</item>-->

        <item name="android:colorControlHighlight">@color/invert_color</item>

        <!-- Customize your theme here. -->

        <!--        Action Mode -->
        <item name="actionModeBackground">?attr/colorPrimaryVariant</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeCloseDrawable">@drawable/ic_baseline_close_24</item>
    </style>

    <style name="Theme.SplitWise.Boxed" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0d47a1</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->

        <item name="colorSecondary">#1976d2</item>
        <item name="colorSecondaryVariant">#00227b</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>-->
<!--        <item name="android:windowLightStatusBar">true</item>-->

        <!-- Customize your theme here. -->

        <item name="android:colorControlHighlight">@color/invert_color</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Boxed.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Boxed.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Boxed.LargeComponent</item>

        <!--        Action Mode -->
        <item name="actionModeBackground">?attr/colorPrimaryVariant</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeCloseDrawable">@drawable/ic_baseline_close_24</item>
    </style>


    <!--    Shape-->
    <style name="ShapeAppearance.Boxed.SmallComponent"
        parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeTopRight">8dp</item>
        <!--        <item name="cornerFamily">cut</item>-->
        <!--        <item name="cornerSize">8dp</item>-->
    </style>
    <style name="ShapeAppearance.Boxed.MediumComponent"
        parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeTopRight">8dp</item>
        <!--        <item name="cornerFamily">cut</item>-->
        <!--        <item name="cornerSize">12dp</item>-->
    </style>
    <style name="ShapeAppearance.Boxed.LargeComponent"
        parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeTopRight">8dp</item>
        <!--        <item name="cornerFamily">cut</item>-->
        <!--        <item name="cornerSize">16dp</item>-->
    </style>
</resources>