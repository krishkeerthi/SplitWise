<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActionBarTheme" parent = "@style/Theme.SplitWise">
        <item name="android:background">@color/black</item>
    </style>

    <style name="Theme.SplitWise" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4b93ff</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->

        <item name="colorSecondary">#1976d2</item>
        <item name="colorSecondaryVariant">#00227b</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:actionBarStyle">@style/ActionBarTheme</item>
<!--        <item name="android:windowLightStatusBar">true</item>-->

        <item name="android:colorControlHighlight">@color/invert_color</item>

        <!-- Customize your theme here. -->

        <!--        Action Mode -->
        <item name="actionModeBackground">?attr/colorSecondary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeCloseDrawable">@drawable/ic_baseline_close_24</item>
    </style>

    <style name="Theme.SplitWise.Boxed" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4b93ff</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->

        <item name="colorSecondary">#1976d2</item>
        <item name="colorSecondaryVariant">#00227b</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:actionBarStyle">@style/ActionBarTheme</item>
<!--        <item name="android:windowLightStatusBar">true</item>-->

        <item name="android:colorControlHighlight">@color/invert_color</item>

        <!-- Customize your theme here. -->

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Boxed.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Boxed.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Boxed.LargeComponent</item>

        <!--        Action Mode -->
        <item name="actionModeBackground">?attr/colorSecondary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeCloseDrawable">@drawable/ic_baseline_close_24</item>
    </style>


    <!--    Shape-->
    <style name="ShapeAppearance.Boxed.SmallComponent"
        parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="ShapeAppearance.Boxed.MediumComponent"
        parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">12dp</item>
    </style>
    <style name="ShapeAppearance.Boxed.LargeComponent"
        parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>