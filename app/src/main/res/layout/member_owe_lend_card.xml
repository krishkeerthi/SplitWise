    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/member_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="4dp"
        tools:text="Keerthi K "
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/text_bold"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/owe_text_view"
        app:layout_constraintStart_toEndOf="@+id/member_owed_lend_card"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/owe_text_view"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        tools:text="₹1200"
        android:textAlignment="textEnd"
        android:textColor="#F44336"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vertical_view"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vertical_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="4dp"
        android:background="#dee3e1"
        app:layout_constraintBottom_toBottomOf="@id/lend_text_view"
        app:layout_constraintEnd_toStartOf="@id/lend_text_view"
        app:layout_constraintTop_toTopOf="@id/lend_text_view" />

    <TextView
        android:id="@+id/lend_text_view"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        tools:text="₹123456789"
        android:textAlignment="textEnd"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

